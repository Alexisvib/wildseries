{% extends 'base.html.twig' %}

{% block title %}{{ 'welcome' | trans }} !{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}

<h1>{{ 'welcome' | trans }}</h1>

    <h2> {{ 'welcome.title' | trans }}</h2>

    <div class="container">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">{{ 'changeLanguage' | trans }}</button>
        {{ form_end(form) }}

        <br> <br> <br>
        <!-- Slider main container -->
        <div class="swiper-container mySwiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper ">
                {% for program in programs %}
                <div class="swiper-slide"><a href="{{ path('program_show', {slug: program.slug}) }}"><img src="{{ program.poster }}" alt="image de sÃ©rie"></a></div>
                {% endfor %}
            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
        </div>

    </div>
{% endblock %}