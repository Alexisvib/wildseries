{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}{{ 'allPrograms' | trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1>{{ 'lookforaserie' | trans }}</h1>
    <div class="row">
        <div class="col-4 ">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    <h1>{{ 'Alltheserie' | trans }} </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - {{ 'category' | trans }} : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">{{ 'showprogram' | trans }}</a>
        </div>
    {% else %}
        {{ 'noseriefound' | trans }}
    {% endfor %}

    <br>
    <h4> {{ 'addaprogram' | trans }}</h4>
    <a href="{{ path('program_new') }}">
        {{ 'addaprogram' | trans }}
    </a>

    <br><br>
    <a href="{{ path('app_index') }}">
        {{ 'backtohome' | trans }}
    </a>
{% endblock %}