{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        {% if program.isUploaded %}
            <img class="align-self-start mr-3" src="{{ asset('uploads/' ~ program.poster) }}" alt="{{ program.title }} poster">
        {% else %}
            <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        {% endif %}

        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>

            <p> Saisons : </p>
            <ul>
            {% for season in program.seasons %}
                <li><a href="{{ path("program_season_show", { slug: program.slug, season: season.id }) }}">Saison : {{ season.number }}</a></li>
            {% else %}
            <p> Pas de saison trouvée </p>
            {% endfor %}
            </ul>


            <strong class="text-white">Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li class="text-white"><a href="{{ path('actor_show', {id: actor.id}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li class="text-white">Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
        {% if app.user %}
        <a id="watchlist" href="{{ path('program_watchlist', { program: program.id }) }}" class="favorite">
            <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
        </a>
        {% endif %}
    </div>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
    {%endif%}
    <a href="{{ path('program_edit', { slug: program.slug }) }}">Editer la série</a>
    <br><br>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}
